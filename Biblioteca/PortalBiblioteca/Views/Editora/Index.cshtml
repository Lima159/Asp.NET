@using PortalBiblioteca.Models

@{
    ViewData["Title"] = "Index";
}
@{
    var editoras = ViewBag.Message;
}
    <h1 align="center" style="color:white;">Editoras</h1>

<a asp-action="Create">Nova Entrada</a>

<table>
    <tr>
        <th>Id</th>
        <th>Nome</th>
        <th>Ações</th>
    </tr>
    @for (int i = 0; i < editoras.Count; i++)
    {
        <tr>
            <td>@editoras[i].Id</td>
            <td>@editoras[i].Nome</td>
            <td>
                <a asp-action="Update" asp-route-id="@editoras[i].Id">Edit</a> |
                <a asp-action="Detail" asp-route-id="@editoras[i].Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@editoras[i].Id">Delete</a>
            </td>
        </tr>
    }
</table>