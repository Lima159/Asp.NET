@using PortalBiblioteca.Models

@{
    ViewData["Title"] = "Index";
}
@{
    var leitores = ViewBag.Message;
}
    <h1 align="center" style="color:white;">Leitores</h1>

<a asp-action="Create">Nova Entrada</a>

<table>
    <tr>
        <th>Id</th>
        <th>Nome</th>
        <th>CPF</th>
        <th>Data de Nascimento</th>
        <th>Ações</th>
    </tr>
    @for (int i = 0; i < leitores.Count; i++)
    {
<tr>
    <td>@leitores[i].Id</td>
    <td>@leitores[i].Nome</td>
    <td>@leitores[i].CPF</td>
    <td>@leitores[i].DataNascimento</td>
    <td>
        <a asp-action="Update" asp-route-id="@leitores[i].Id">Edit</a> |
        <a asp-action="Detail" asp-route-id="@leitores[i].Id">Details</a> |
        <a asp-action="Delete" asp-route-id="@leitores[i].Id">Delete</a>
    </td>
</tr>
    }
</table>