@model PortalBiblioteca.Models.Leitor
@{
}

<form action="/Leitor/Update/" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <div>
            <label>Nome</label>
            <input asp-for="Nome" type="text" /> <br />
            <label>CPF</label>
            <input asp-for="CPF" type="text" /> <br />
            <label>Data de Nascimento</label>
            <input asp-for="DataNascimento" type="datetime-local" /> <br />
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>